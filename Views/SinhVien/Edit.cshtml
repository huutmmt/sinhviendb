@model database.Models.SinhVien

@{
    ViewBag.Title = "Sửa thông tin sinh viên";
}

<h2>Sửa thông tin sinh viên</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.ma, "Mã sinh viên")
        @Html.EditorFor(model => model.ma, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ma)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ht, "Họ tên")
        @Html.EditorFor(model => model.ht, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ht)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.diem, "Điểm")
        @Html.EditorFor(model => model.diem, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.diem)
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        @Html.ActionLink("Quay lại", "IndexSV", null, new { @class = "btn btn-default" })
    </div>
}
